generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id String @id @default(uuid())
  name String

  resources Resource[]
  components Component[]

  @@map("projects")
}

model Resource {
  id String @id @default(uuid())
  name String
  ammount Int

  project_id String
  project   Project   @relation(fields: [project_id], references: [id])

  @@map("resources")
}

model Component {
  id String @id @default(uuid())
  name String
  email String

  project_id String
  project    Project   @relation(fields: [project_id], references: [id])

  @@map("components")
}
